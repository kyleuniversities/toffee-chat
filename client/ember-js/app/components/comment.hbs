<div class="w-100">
  <FullFieldCard>
    <FieldCardHeader>
      <div class="d-flex">
        <LinkTo
          class="text-link"
          @route="profile-page"
          @model={{@commentData.user}}
        >
          <div class="px-2 d-flex h-100 h-50p mb-2">
            <div class="d-flex h-50p align-items-center">
              <img
                src={{user-picture @author}}
                class="post-avatar-image"
                alt="profile"
              />
            </div>
            <div class="d-flex mx-2 h-50p align-items-center">
              <div class="profile-box-name align-items-center">
                {{@author}}
              </div>
            </div>
          </div>
        </LinkTo>
        {{#if this.isDeletable}}
          <div class="px-2 d-flex h-100 h-50p mb-0 text-red flex-right">
            <div
              class="field-area field-area-delete option-red"
              onclick={{this.deleteComment}}
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="20"
                height="25"
                fill="currentColor"
                class="bi bi-trash-fill"
                viewBox="0 0 16 16"
              >
                <path
                  d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5M8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5m3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0"
                />
              </svg>
            </div>
          </div>
        {{/if}}
      </div>
    </FieldCardHeader>
    <div class="mx-2">
      <FieldCardBody>{{@body}}</FieldCardBody>
    </div>
    <div class="mx-2 mt-1 d-flex">
      <div class="d-flex sub-comment-text">
        <i>{{@createdAtText}}</i>
      </div>
    </div>
  </FullFieldCard>
  <br />
</div>