<div id="profile-box-container" class="profile-box-container h-50p">
  <div class="px-2 d-flex h-100 h-50p" onclick={{this.toggleShow}}>
    <div class="d-flex h-50p align-items-center">
      <img
        src={{user-picture this.profileName}}
        class="profile-avatar-image"
        alt="profile"
      />
    </div>
    <div class="d-flex mx-2 h-50p align-items-center">
      <div class="profile-box-name align-items-center">
        {{this.profileName}}
      </div>
    </div>
  </div>
  {{#if this.isGuestUser}}
    <div id="profile-box-dropdown-menu">
      <a class="dropdown-item" href="/login">Log In</a>
      <a class="dropdown-item" href="/registration">Register</a>
    </div>
  {{else}}
    <div id="profile-box-dropdown-menu">
      <a class="dropdown-item" href={{this.profileUrl}}>My Profile</a>
      <a class="dropdown-item" onclick={{this.logOut}} href="/">Log Out</a>
    </div>
  {{/if}}
</div>